# GNU Make workspace makefile autogenerated by Premake

ifndef config
  config=debug
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug)
  window_config = debug
  test_config = debug
endif
ifeq ($(config),release)
  window_config = release
  test_config = release
endif
ifeq ($(config),dist)
  window_config = dist
  test_config = dist
endif

PROJECTS := window test

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

window:
ifneq (,$(window_config))
	@echo "==== Building window ($(window_config)) ===="
	@${MAKE} --no-print-directory -C . -f window.make config=$(window_config)
endif

test: window
ifneq (,$(test_config))
	@echo "==== Building test ($(test_config)) ===="
	@${MAKE} --no-print-directory -C . -f test.make config=$(test_config)
endif

clean:
	@${MAKE} --no-print-directory -C . -f window.make clean
	@${MAKE} --no-print-directory -C . -f test.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug"
	@echo "  release"
	@echo "  dist"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   window"
	@echo "   test"
	@echo ""
	@echo "For more information, see https://github.com/premake/premake-core/wiki"